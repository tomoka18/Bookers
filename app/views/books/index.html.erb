<body>

<h1>Books</h1>

<div>
<table>
 <tr>
 <th class="data1">title</th>
 <th class="date2">Body</th>
 <th class="date3">&nbsp;</th>
 <th class="date4">&nbsp;</th>
 <th class="date5">&nbsp;</th>
 </tr>


<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td><%= link_to 'Show', book_path(book.id) , class:"black" %></td>
 <td><%= link_to "Edit", edit_book_path(book.id) , class:"black" %></td>
 <td><%= link_to "Destroy", book_path(book.id), method: :delete , data: {confirm: "Are you sure?"} , class:"black" %></td>
</tr>
 <% end %>

</table>

</div>





<div>
<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred.
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>

<label>Title</label>

<%= f.text_field :title %>

<label>Body</label>

<%= f.text_area :body %>

<div class=create><%= f.submit 'Create Book' %></div>
<% end %>
</div>

</body>



