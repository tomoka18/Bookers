<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

<div class=box><%= f.submit 'Update Book' %></div>

<div class=links>
<div><%= link_to 'Show', book_path(@book) , class:"black" %></div>
<div class=center>|</div>
<div><%= link_to 'Back', books_index_path , class:"black" %></div>
</div>

<% end %>